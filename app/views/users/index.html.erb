<h1>All Clone Book Users</h1>

<table>
	<% @users.each do |user| %>
	<tr>
		<td>
			<%= link_to gravatar_for(user), user_path(user) %>
			<%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %>
		</td>

		<td>
			<% unless user == current_user || current_user.friends.include?(user) %>
			<%= link_to 'Add Friend', user.requesting_friendships.create(friendship_accepter: user) %>
			<% end %>
		</td>

		<td>
			<% if current_user == user %>
			<%= link_to 'Close Account', user_path(user), method: :delete %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>